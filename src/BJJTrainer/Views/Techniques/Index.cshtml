@model IEnumerable<BJJTrainer.Models.Technique>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Position
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", "Techniques", new { id = item.TechniqueId })
            </td>
            <td>
                @Html.ActionLink(item.Position.Name, "Details", "Positions", new { id = item.Position.PositionId })
            </td>
            <td>
                @Html.ActionLink(item.Category.Name, "Details", "Categories", new { id = item.Category.CategoryId })
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TechniqueId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.TechniqueId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
