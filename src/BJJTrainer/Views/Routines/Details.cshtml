@model BJJTrainer.Models.Routine

@{
    ViewData["Title"] = "Details";
}
<script type="text/javascript">
    $(document).ready(function () {
        //Ajax call to display position chart
        $.ajax({
            type: 'GET',
            url: '@Url.Action("DisplayPositionTime", new { @id = @Model.RoutineId })',
            success: function (result) {
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);
                function drawChart() {
                    
                    var jsonFinal = displayPieChart(result);
                    var data = google.visualization.arrayToDataTable(jsonFinal, true);

                    var options = {
                        is3D: true,                    
                        width: 900,
                        height: 500
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));

                    chart.draw(data, options);
                }
            }
        });
        ///Ajax call to display technique chart
        $.ajax({
            type: 'GET',
            url: '@Url.Action("DisplayTechniqueTime", new { @id = @Model.RoutineId })',
            success: function (result) {
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);
                function drawChart() {

                    var jsonFinal = displayPieChart(result);
                    var data = google.visualization.arrayToDataTable(jsonFinal, true);

                    var options = {
                        is3D: true,
                        width:900,
                        height:500
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart2'));

                    chart.draw(data, options);
                }
            }
        });
        //Ajax call to display category time
        $.ajax({
            type: 'GET',
            url: '@Url.Action("DisplayCategoryTime", new { @id = @Model.RoutineId })',
            success: function (result) {
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);
                function drawChart() {

                    var jsonFinal = displayPieChart(result);
                    var data = google.visualization.arrayToDataTable(jsonFinal, true);

                    var options = {
                        is3D: true,
                        width: 900,
                        height: 500
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart3'));

                    chart.draw(data, options);
                }
            }
        });
    });
</script>
<h2>Details</h2>

<div>
    <h1>Routine: @Html.DisplayFor(model => model.Name)</h1>
    <hr />
</div>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        Technique
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Time
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var drill in Model.Drills)
                {
                    <tr>
                        <td>
                            <a asp-area="" asp-controller="Drills" asp-action="Details" asp-route-id="@drill.TechniqueId">@drill.Description</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => drill.Technique.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => drill.Technique.Position.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => drill.Time)
                        </td>                
                    </tr>
                }
            </tbody>
        </table>
        <div><h3>Total Routine Time: @ViewBag.TotalTime</h3></div>
        <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.RoutineId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-md-6">
        <ul class="nav nav-pills" style="margin-top: -65px;">
            <li class="active"><a data-toggle="tab" href="#positions">Positions</a></li>
            <li><a data-toggle="tab" href="#techniques">Techniques</a></li>
            <li><a data-toggle="tab" href="#categories">Categories</a></li>
        </ul>
        <div class="tab-content">
            <div id="positions" class="tab-pane fade in active">
                <div id="piechart" style="width: 900px; height: 500px; margin-left: -50px;"></div>
            </div>
            <div id="techniques" class="tab-pane fade">
                <div id="piechart2" style="margin-left: -50px;"></div>
            </div>
            <div id="categories" class="tab-pane fade">
                <div id="piechart3" style="margin-left: -50px;"></div>
            </div>
        </div>
    </div>
</div>
