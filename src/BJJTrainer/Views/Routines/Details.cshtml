@model BJJTrainer.Models.Routine

@{
    ViewData["Title"] = "Details";
}
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("DisplayPositionTime", new { @id = @Model.RoutineId })',
            success: function (result) {
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);
                function drawChart() {

                    var filteredJson = [];
                    var jsonResult = JSON.parse(result);
                    var index;

                    for (var i = 0; i < jsonResult.length; i++) {
                        index = newDataContains(jsonResult[i].position);
                        if (index == -1) {
                            filteredJson.push({ position: jsonResult[i].position, time: jsonResult[i].time });
                        } else {
                            filteredJson[index].time += jsonResult[i].time;
                        }
                    }

                    function newDataContains(position) {
                        for (var i = 0; i < filteredJson.length; i++) {
                            if (JSON.stringify(filteredJson[i].position) == JSON.stringify(position)) {
                                return i;
                                break;
                            }
                        }
                        return -1;
                    }
                    var jsonFinal = [];
                    $.each(filteredJson, function (i, obj) {
                        jsonFinal.push([obj.position, obj.time]);
                    });

                    var data = google.visualization.arrayToDataTable(jsonFinal, true);

                    var options = {
                        is3D: true,
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));

                    chart.draw(data, options);
                }
            }      
        });
    });
</script>
<h2>Details</h2>

<div>
    <h1>Routine: @Html.DisplayFor(model => model.Name)</h1>
    <hr />
</div>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        Technique
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Time
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var drill in Model.Drills)
                {
                    <tr>
                        <td>
                            <a asp-area="" asp-controller="Drills" asp-action="Details" asp-route-id="@drill.TechniqueId">@drill.Description</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => drill.Technique.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => drill.Technique.Position.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => drill.Time)
                        </td>                
                    </tr>
                }
            </tbody>
        </table>
        <div><h3>Total Routine Time: @ViewBag.TotalTime</h3></div>
        <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.RoutineId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-md-6">
        <ul class="nav nav-pills" style="margin-top: -65px;">
            <li class="active"><a data-toggle="tab" href="#positions">Positions</a></li>
            <li><a data-toggle="tab" href="#techniques">Techniques</a></li>
            <li><a data-toggle="tab" href="#mcategories">Categories</a></li>
        </ul>
        <div class="tab-content">
            <div id="positions" class="tab-pane fade in active">
                <div id="piechart" style="width: 900px; height: 500px; margin-left: -50px;"></div>
            </div>
            <div id="techniques" class="tab-pane fade">
                <h3>Techniques</h3>
                <p>Technique piechart.</p>
            </div>
            <div id="categories" class="tab-pane fade">
                <h3>Categories</h3>
                <p>Category piechart.</p>
            </div>
        </div>
    </div>
</div>
