@model BJJTrainer.Models.Drill

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Drill</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Routine" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoutineId" class ="form-control" asp-items="ViewBag.RoutineId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Technique" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TechniqueId" class ="form-control" asp-items="ViewBag.TechniqueId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger" />
            </div>
        </div>
            <div class="form-group">
                <label asp-for="Video" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Video" minlength="11" maxlength="11"  class="form-control" />
                    <span asp-validation-for="Video" class="text-danger" />
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
